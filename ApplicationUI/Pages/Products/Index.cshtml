@page
@model ApplicationUI.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Product List";
}
<h2>Product List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Products)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Price</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-page="Create">Add Product</a>
